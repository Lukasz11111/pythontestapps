FROM  py-rdb:latest
WORKDIR /app

COPY ./appTornado.py /app/appTornado.py
COPY ./tornadoApp /app/tornadoApp
COPY ./tests /app/tests

ENV REVDEBUG_SOLUTION=tornado \
 REVDEBUG_APPLICATION=tornado \
 REVDEBUG_RELEASE=565575ae \
 REVDEBUG_MODE=crash\
 REVDEBUG_HOST=20.199.127.147 \
 REVDEBUG_APM=1

RUN pip3 install tornado

CMD python appTornado.py
